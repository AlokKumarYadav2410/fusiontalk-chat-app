<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/settingback"
    tools:context=".Setting">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="123dp">


        <ImageView
            android:id="@+id/settingprofile"
            android:layout_marginLeft="@dimen/_90sdp"
            android:layout_marginTop="@dimen/_90sdp"
            android:layout_marginBottom="@dimen/_50sdp"
            android:layout_width="179dp"
            android:layout_height="149dp"
            app:srcCompat="@drawable/photocamera" />

        <EditText
            android:id="@+id/settingname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="@dimen/_70sdp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Change UserName"/>

        <EditText
            android:id="@+id/settingstatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_70sdp"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Change Status"/>

        <Button
            android:id="@+id/donebutt"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_35sdp"
            android:layout_marginLeft="@dimen/_110sdp"
            android:backgroundTint="@color/black"
            android:layout_marginTop="40dp"
            android:text="Save"
            app:cornerRadius="25dp"/>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>